<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/login_bg"
    android:gravity="center"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="138dp"
        android:hint="@string/input_phone_number"
        android:background="@mipmap/login_input_text"
        android:textColorHint="@color/phone_number_login"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:inputType="number"
        android:textSize="@dimen/margin_sixteen"
        android:drawablePadding="11dp"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:drawableLeft="@mipmap/log_reg_user_ico"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:hint="@string/input_password"
        android:background="@mipmap/login_input_text"
        android:textColorHint="@color/phone_number_login"
        android:textSize="@dimen/margin_sixteen"
        android:drawablePadding="13dp"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:layout_marginTop="17dp"
        android:drawableLeft="@mipmap/log_reg_pwd_ico"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_gravity="center_vertical"
           android:layout_height="wrap_content">
           <FrameLayout
               android:id="@+id/self_login"
               android:layout_width="wrap_content"
               android:paddingTop="20dp"
               android:paddingLeft="12dp"
               android:paddingRight="8dp"
               android:layout_centerVertical="true"
               android:layout_height="wrap_content">

               <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:scaleType="fitXY"
                   android:src="@mipmap/login_check_box_view"
                   />
               <ImageView
                   android:id="@+id/login_zid_iv"
                   android:layout_width="15dp"
                   android:layout_height="18dp"
                   android:scaleType="fitXY"
                   android:layout_gravity="center"
                   android:layout_marginBottom="3dp"
                   android:src="@mipmap/login_check_box"
                   />
           </FrameLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="20dp"
               android:text="@string/login_self"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/self_login"
               android:textColor="@color/black"
               />

           <TextView
               android:id="@+id/register_login"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/reg"
               android:layout_centerVertical="true"
               android:paddingLeft="40dp"
               android:paddingTop="20dp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="83dp"
               android:textColor="@color/black"
               />
           <View
               android:layout_width="1dp"
               android:layout_height="12dp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="75dp"
               android:layout_marginTop="25dp"
               android:background="@color/black"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/forget_password"
               android:layout_centerVertical="true"
               android:paddingTop="20dp"
               android:layout_alignParentRight="true"
               android:paddingRight="@dimen/margin_twelve"
               android:textColor="@color/black"
               />
       </RelativeLayout>

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/login_button"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        android:layout_marginTop="19dp"
        android:scaleType="fitXY"
        android:src="@mipmap/other_account_icon"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/qq"
            android:layout_width="45dp"
            android:scaleType="fitXY"
            android:layout_height="45dp"
            android:src="@mipmap/tencent_icon"
            />

        <ImageView
            android:layout_toRightOf="@+id/qq"
            android:layout_width="45dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="36dp"
            android:layout_height="45dp"
            android:src="@mipmap/we_chat_icon"
            />
    </RelativeLayout>
</LinearLayout>