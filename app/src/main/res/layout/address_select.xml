<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/in_toolbar"
        />

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:layout_height="0dp">
    </com.amap.api.maps.MapView>

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:text="上海市浦东新区"
        android:gravity="center"
        android:layout_margin="@dimen/dp_21"
        android:layout_height="@dimen/dp_25" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/transparent_white_80"
        />

    <TextView
        android:id="@+id/commit_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_forty"
        android:text="@string/commit_sure"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_21"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:layout_marginBottom="@dimen/margin_ten"
        android:background="@mipmap/button_yellow"
        />
</LinearLayout>