<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SwipeBackActivityAnimation</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="LoadingActivtyTheme" parent="@style/AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_launch</item>
    </style>

    <style name="indeterminate_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:drawable/toast_frame</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Start_Person">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:src">@mipmap/start_red</item>
    </style>

    <style name="Text_Name_Person">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_five</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#c0c0c0</item>
    </style>

    <style name="Text_Name_Person_Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#2e3844</item>
        <item name="android:textColorHint">#2e3844</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="dialog_style" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
